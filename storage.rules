rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Only authenticated users can access their own user_item_images
    match /users/{uid}/user_item_images/{allPaths=**} {
      allow read, list: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Profile assets (e.g., avatar)
    match /users/{uid}/profile/{allPaths=**} {
      allow read, list: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
