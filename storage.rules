rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function: Check if user is partner
    function isPartner(uid) {
      let userDoc = firestore.get(/databases/(default)/documents/users/$(uid));
      return request.auth != null
        && userDoc.data.collaborators != null
        && request.auth.uid in userDoc.data.collaborators;
    }

    // User item images: Owner or partner can read, only owner can write
    match /users/{uid}/user_item_images/{allPaths=**} {
      allow read, list: if request.auth != null
        && (request.auth.uid == uid || isPartner(uid));
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Profile assets (e.g., avatar): Owner or partner can read, only owner can write
    match /users/{uid}/profile/{allPaths=**} {
      allow read, list: if request.auth != null
        && (request.auth.uid == uid || isPartner(uid));
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
